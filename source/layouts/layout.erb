  </head>
  <body>
    <% if [:fr, :nl].include? lang %>


    <div class="nav-bar">
      <div class="module widget-handle mobile-toggle right visible-sm visible-xs">
        <i class="ti-menu"></i>
      </div>
      <div class="module-group left">
        <div class="module left">
          <% link_to 'index.html', style:'opacity:1 !important;' do %>
            <%= image_tag 'logo-beoi-small.png', class:'logo', alt:'beOI' %>
          <% end %>
        </div>
        <div class="module left">
          <ul class="menu mb0">
            <li class="has-dropdown">
              <%= link_to t(:beOI_Contest_menu), 'index.html' %>
              <ul>
                <li><%= link_to t('ContestIndex'), 'index.html#intro' %></li>
                <li><%= link_to t('Contest'), 'index.html#contest' %></li>
                <li><%= link_to t('QualifResults'), 'qualif_results.html' %></li>
                <li><%= link_to t('FinalResults'), 'final_results.html' %></li>
                <li><%= link_to t('Rules'), 'rules.html' %></li>
                <!--<li><%= link_to t('Registration'), 'registration.html' %></li>-->
                <li><%= link_to t('Tasks'), 'index.html#sample-questions' %></li>
                <!-- <li><a href="learn-programming.html">Apprendre à programmer</a></li> -->
                <!-- <li><a href="prizes.html">À remporter</a></li> -->
                <li><%= link_to t('FAQ'), 'faq.html' %></li>
              </ul>
            </li>
            <li class="has-dropdown">
              <%= link_to t(:beCP_Contest_menu), 'becp.html' %>
              <ul>
                <li><%= link_to t('ContestIndex'), 'becp.html#intro' %></li>
                <li><%= link_to t('TaskDescriptions'), 'becp.html#questions' %></li>
                <li><%= link_to t('Results')+" 2016", 'becp.html#results' %></li>
                <li><%= link_to t('BelgiumAtIOI'), 'http://stats.ioinformatics.org/results/BEL?sort=rel_rank_desc' %></li>
              </ul>
            </li>
            <li class="has-dropdown">
              <%= link_to t(:Archives), '#' %>
              <ul>
                <li><%= link_to "#{t('Edition')} 2016", 'beoi16.html' %></li>
                <li><%= link_to "#{t('Edition')} 2015", 'beoi15.html' %></li>
                <li><%= link_to "#{t('Edition')} 2014", 'beoi14.html' %></li>
                <li><%= link_to "#{t('Edition')} 2013", 'beoi13.html' %></li>
                <li><%= link_to "#{t('Edition')} 2012", 'beoi12.html' %></li>
                <li><%= link_to "#{t('Edition')} 2011", 'beoi11.html' %></li>
                <li><%= link_to "#{t('Edition')} 2010", 'beoi10.html' %></li>
                <!-- <li><a href="/">Édition 1992</a></li> -->
              </ul>
            </li>
            <li class="has-dropdown">
              <%= link_to t(:About), 'about.html' %>
              <ul>
                <li><%= link_to "beOI #{t('nonprofit')}", 'about.html' %></li>
                <li><%= link_to t(:Sponsors), 'about.html#sponsors' %></li>
                <!-- <li><a href="/">Presse</a></li> -->
                <li><%= link_to t(:Members), 'about.html#members' %></li>
                <!-- <li><a href="/">Sponsors</a></li> -->
              </ul>
            </li>
          </ul>
        </div>
        <!--end of menu module-->
      </div>
      <!--end of module group-->
      <div class="module-group right">
        <div class="module widget-handle language left">
          <ul class="menu mb0">
            <li class="has-dropdown">
              <%= link_to I18n.locale, '#' %>
              <ul>
                <li><%= link_to 'Français', '/fr/' %></li>
                <li><%= link_to 'Nederlands', '/nl/' %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <% end %>
    <div class="main-container">
      <%= yield %>
      <footer class="footer-2 bg-dark pt0 pb40">
        <div class="container">
          <div class="row">
            <hr class="mt0 mb40" />
          </div><!--end of row-->
          <div class="row">
            <div class="col-sm-3">
              <% link_to '//www.be-oi.be' do %>
                <%= image_tag 'logo-beoi-grey.png', class:'image-xxs fade-half', alt:'beOI' %>
              <% end %>
            </div>

            <div class="col-sm-6 text-center">
              <span class="fade-half">
                beOI ASBL/VZW<br/>
                Belgische Informatica-olympiade - Olympiade belge d’Informatique<br/>
                © Copyright 2010-2017
              </span>
            </div>

            <div class="col-sm-3 text-right">
              <ul class="list-inline social-list">
                <li><a href="//www.facebook.com/beoi.contest"><i class="ti-facebook"></i></a></li>
              </ul>
            </div>
          </div><!--end of row-->
        </div><!--end of container-->
      </footer>
    </div>

    <% if current_page.data.trianglify_colors %>
      <script src="//cdnjs.cloudflare.com/ajax/libs/trianglify/0.2.1/trianglify.min.js"></script>
      <script type="text/javascript">
        var gen_pattern = function() {
          return Trianglify({
            width: window.innerWidth,
            height: window.innerHeight*1.5,
            x_colors: <%= current_page.data.trianglify_colors %>
          })
        }
        document.getElementById("page-header-image-holder").appendChild(gen_pattern().canvas())
      </script>
    <% end %>

    <%= javascript_include_tag "jquery.min", "bootstrap.min", "flexslider.min", "smooth-scroll.min", "parallax", "scripts", "countdown.min" %>
    <% if current_page.data.trianglify_colors %>
    <script type="text/javascript">
      jQuery(function($){
        var windowWidth = $(window).width();
        $(window).resize(function() {
          if(windowWidth != $(window).width()){
            $("#page-header-image-holder > canvas").remove()
            $("#page-header-image-holder").append(gen_pattern().canvas())
          }
        });
      });
    </script>
    <% end %>
