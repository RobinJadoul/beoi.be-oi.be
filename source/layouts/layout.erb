<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title ? "beOI: #{current_page.data.title}" : (([:fr, :nl].include? lang) ? t("default_page_title") : "beOI" ) %></title>
    <meta property="og:title" content="<%= current_page.data.title ? "beOI: #{current_page.data.title}" : (([:fr, :nl].include? lang) ? t("default_page_title") : "beOI" ) %>" />
    <%= favicon_tag 'favicon.png' %>
    <meta name="viewport" content="width=device-width, initial-scale=0.9">

    <meta property="og:image" content="http://beoi.be-oi.be/img/ext-logos/logo-beoi-og-dont-change-5b905653.png" />
    <% if [:fr, :nl].include? lang %>
    <meta name="description" content="<%= t('meta_description') %>" />
    <meta property="og:description" content="<%= t('meta_description') %>" />
    <meta property="og:locale" content="<%= lang %>" />
    <% end %>

    <%= stylesheet_link_tag "bootstrap.min", "themify-icons", "flexslider", "lightbox.min", "theme", "custom" %>
    <link href='//fonts.googleapis.com/css?family=Lato:300,400%7CRaleway:100,400,300,500,600,700%7COpen+Sans:400,500,600' rel='stylesheet' type='text/css'>
