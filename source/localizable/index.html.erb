<%= partial "index_calendar" %>

<a name="contest-step2"></a>
<section class="image-square right bg-secondary">
  <div class="col-md-6 image">
    <div class="background-image-holder">
      <img alt="image" class="background-image" src="/img/pic2.jpg" />
    </div>
  </div>
  <div class="col-md-6 content"><%= partial "index_contest_step2" %></div>
</section>

<% if ![:preregistration, :registration].include?(config.contest_state) %>
<section class="bg-dark pb0">
  <div class="container">
    <div class="row mb64 mb-xs-32">
      <h2 class="large text-center"><%= t("keep_me_informed_of_registrations") %></h2>
      <div class="row mb24"><%= partial "subscribe_info_form" %></div>
    </div>
  </div>
</section>
<% end %>

<a name="members"></a>
<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h4 class="uppercase mb64 mb-xs-40"><%= t(:members) %></h4>
      </div>
    </div>
    <!--end of row-->
    <div class="row">
      <div class="logo-carousel">
        <ul class="slides">
          <% data.members.each do |m| %>
          <li>
            <% link_to m.href do %>
              <%= image_tag "ext-logos/%s"%m.image, alt:m.name %>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
      <!--end of logo slider-->
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>

<% if config.registration_open %>
<%= partial "map_qualif_centers" %>
<% end %>

<a name="sample-questions"></a>
