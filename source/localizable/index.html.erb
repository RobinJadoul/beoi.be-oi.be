---
contest_platform:
  fr: https://concours.be-oi.be/
  nl: https://wedstrijd.be-oi.be/
management_platform:
  fr: https://gestion.be-oi.be/
  nl: https://beheer.be-oi.be/
---
<section class="image-bg overlay parallax" style="background-color:#48ad68;">
  <%=page_header_empty_image_holder %>
  <div class="background-image-holder background-image-mosaic">
    <img alt="Background" class="background-image" src="/img/background-sciences.png"/>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-2 text-center">
          <img src="/img/logo-beoi-white.png" style="max-height: 160px;">
        </div>
        <div class="col-sm-8">
          <h1><%= t(:title) %></h1>
          <h4 class="uppercase mb48 mb-xs-32">
            <%= t(:subtitle) %>
          </h4>
        </div>
      </div>
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>

<a name="intro"></a>

<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h4 class="uppercase mb16"><%= t(:overview_title) %></h4>
        <p class="lead mb64"><%= t(:overview_desc) %></p>
      </div>
    </div>
    <!--end of row-->
    <div class="row">
      <div class="col-sm-4">
        <div class="feature feature-2 boxed">
          <div class="text-center">
            <i class="ti-write icon-sm"></i>
            <h5 class="uppercase"><%= t(:overview_first_title) %></h5>
          </div>
          <p><%= t(:overview_first_desc) %></p>
        </div>
        <!--end of feature-->
      </div>
      <div class="col-sm-4">
        <div class="feature feature-2 boxed">
          <div class="text-center">
            <i class="ti-bar-chart icon-sm"></i>
            <h5 class="uppercase"><%= t(:overview_second_title) %></h5>
          </div>
          <p class="mb8"><%= t(:overview_second_desc) %></p>
          <dl class="dl-horizontal category-list"><%= partial "index_list_categories" %></dl>
        </div>
        <!--end of feature-->
      </div>
      <div class="col-sm-4">
        <div class="feature feature-2 boxed">
          <div class="text-center">
            <i class="ti-direction-alt icon-sm"></i>
            <h5 class="uppercase"><%= t(:overview_third_title) %></h5>
          </div>
          <p><%= t(:overview_third_desc) %></p>
        </div>
        <!--end of feature-->
      </div>
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>

<%= partial "index_action_block" %>

