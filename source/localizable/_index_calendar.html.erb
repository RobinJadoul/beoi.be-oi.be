
<section class="bg-dark">
  <div class="container">
    <div class="row mb0 mb-xs-32">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">
        <h4 class="uppercase large"><%= t(:Calendar) %> 2017-2018</h4>
      </div>

      <div class="col-sm-10 col-md-8 col-md-offset-2">

        <ul class="mb0 mt8">

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">7 <%= t(:Feb) %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:qualif_round).capitalize %></h6>
                <span><% link_to "index.html#contest-step1" do t(:more_info_below).capitalize; end %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">
                <% if lang == :fr %>13-15 <%= t(:Feb) %>
                <% else %>14-16 <%= t(:Feb) %>
                <% end %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:training_course).capitalize %></h6>
                <span>
                <% if lang == :fr %>Louvain-la-Neuve
                <% else %>Leuven
                <% end %>
                <%# t(:more_info_later).capitalize %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">17 <%= t(:Mar) %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:final_round).capitalize %></h6>
                <span><% link_to "index.html#contest-step2" do t(:more_info_below).capitalize; end %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">2-13 <%= t(:Apr) %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:training_course).capitalize %></h6>
                <span><%= t(:more_info_later).capitalize %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">19 <%= t(:May) %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:selection_contest).capitalize %></h6>
                <span><% link_to "becp.html" do t(:selection_contest_link); end %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

          <li class="mb0 mb-xs-16">
            <div class="overflow-hidden mb0 pt8">
              <div class="col-sm-4">
                <h4 class="uppercase pt8 mb0">1-8 <%= t(:Sep) %></h4>
              </div>
              <div class="col-sm-8 mb8">
                <h6 class="uppercase mb0"><%= t(:ioi_full).capitalize %></h6>
                <span><%= t(:ioi_details) %></span>
              </div>
            </div>
            <hr class="fade-half mb0">
          </li>

        </ul>

      </div>

    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>